@model ConManApp.EnModels.RadnikOprema
@{ ViewData["Title"] = "KreirajRadnikOprema"; }



<div class="col-md-4 offset-md-4 col-sm-12 form-wrapper">
    <h2>Iznajmljivanje opreme</h2>

    @using (Html.BeginForm("IznajmiOpremu", "Radnik", new { radniko = @Model }))
    {
<input asp-for="OpremaId" hidden />
        <div class="form-group">
            <label>Svrha iznajmljivanja:</label><br />
            <input type="text" asp-for="svrhaIznajmljivanja" class="form-control" placeholder="Svrha iznajmljivanja" />
            <br />
        </div>
        <div class="form-group">
            <label>Datum od kada iznajmljujete:</label><br />
            <input type="date" asp-for="DatumZaduzivanja" class="form-control" />
            <br />
        </div>
        <div class="form-group">
            <label>Datum do kada iznajmljujete:</label><br />
            <input type="date" asp-for="DatumKrajaZaduzivanja" class="form-control" />
            <br />
        </div>

        <div class="form-group">
            <div class="form-row">
                <input type="submit" value="Zaduzi" class="btn btn-success" /><br />
                <a href="/Radnik/PregledRaspoloziveOpreme" class="btn">Otkazi</a>
            </div>
        </div>}

</div>
<style>
    .form-wrapper {
        margin-top: 50px;
    }

        .form-wrapper h2 {
            margin-bottom: 20px;
            text-align: center;
        }

        .form-wrapper div {
            margin-bottom: 10px;
            line-height: 1;
        }

        .form-wrapper .form-check-input {
            margin-top: 1px;
        }
</style>




